### Isambard
Include ~/.ssh/config_clifton

## OSX Keychain
Host *
     IgnoreUnknown UseKeychain
     UseKeychain yes
     AddKeysToAgent yes

## Git@LNS access
Host usqcd-git
     HostName usqcd.lns.mit.edu
     User gitolite
     ForwardAgent no
     IdentitiesOnly yes
     HostKeyAlgorithms +ssh-rsa
     PubkeyAcceptedKeyTypes +ssh-rsa
     IdentityFile ~/.ssh/id_rsa

## Wombat
Host wombat
     HostName wombat.mit.edu
     User gurtej
     LocalForward 9000 localhost:9000
     LocalForward 9002 localhost:9002
Host wombat_proxy
     HostName wombat.mit.edu
     User gurtej
     ProxyJump submit.mit.edu

## submit
Host submit.mit.edu
     User gurtej
     ForwardAgent yes

## ALCF
Host bastion
     HostName bastion.alcf.anl.gov
     User gkanwar
     ControlMaster auto
     ControlPath ~/.ssh/cm_socket_%r@%h:%p

Host ec2-poker
     HostName pokerdevil.club
     User ec2-user
     IdentityFile ~/.ssh/AWS.pem

## ITP
Host itpgate1
     HostName itpgate1.unibe.ch
     User kanwar
     LocalForward 8000 localhost:8000
Host itpgate2
     HostName itpgate2.unibe.ch
     User kanwar
Host itpcluster
     HostName itpwilson
     User kanwar
     ProxyJump itpgate1

